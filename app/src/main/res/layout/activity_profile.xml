<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
    android:id="@+id/usermenu"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	tools:context=".Profile"
    android:background="@drawable/ic_homebg"
	xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-black"
                android:text="Performance Tracker"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="24sp" />
            <Button
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/title"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentEnd="true"
                android:text="Log Out"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_bar"
            android:id="@+id/streak_relative_layout">
            <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp" android:textColor="@color/white"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="Hi User!"
            android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
            xmlns:card_view = "http://schemas.android.com/apk/res-auto"
            android:id="@+id/streaks_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="20dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#e9ecef"
            android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:id="@+id/streaks_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/streaks_name"
                        android:layout_width="wrap_content"
                        android:layout_height="70dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="30sp"
                        android:text="Streak Point:"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/streak"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="15dp"
                        android:textAlignment="center"
                        android:layout_toRightOf="@id/streaks_name"
                        android:text="0"
                        android:textSize="30dp"/>
                    <TextView
                        android:id="@+id/view_full_streak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/streak"
                        android:text="View Streak History"
                        android:textAlignment="viewEnd"
                        android:textStyle="italic"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/task_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="1dp"
                app:cardElevation="20dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_below="@id/streaks_card"
                app:cardBackgroundColor="#e9ecef">
                        <LinearLayout
                            android:id="@+id/table_container"
                            android:layout_width="match_parent"
                            android:layout_height="350dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Today's Task List"
                                android:textSize="20sp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"/>
                            <ListView
                                android:id="@+id/task_list"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="20dp"/>                      >

                            <Button
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:background="@drawable/view_more" />
                        </LinearLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/footer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/streak_relative_layout"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal|bottom">
        <Button
            android:id="@+id/open_friend_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Friends"
            android:textStyle="bold" />

        <Button
            android:id="@+id/open_task_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/open_friend_activity"
            android:text="Task"
            android:textStyle="bold" />

        <Button
            android:id="@+id/open_add_class_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/open_task_activity"
            android:text="Class"
            android:textStyle="bold" />

        <Button
            android:id="@+id/open_project_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/open_add_class_activity"
            android:text="Project"
            android:textStyle="bold" />
    </RelativeLayout>
</RelativeLayout>
