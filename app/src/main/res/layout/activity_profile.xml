<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
	tools:context=".Profile"
	xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-black"
                android:text="Performance Tracker"
                android:textAlignment="center"
                android:textSize="24sp" />
            <Button
                android:id="@+id/log_out"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/title"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_alignParentEnd="true"
                android:text="Log Out"
                android:textSize="13sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>


	<ScrollView
	android:layout_width="match_parent"
	android:layout_height="0dp"
    android:layout_weight="1" >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
            android:id="@+id/first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textSize="18sp"
            android:textAlignment="center"
            android:text="Hi User!"
            android:textStyle="bold"/>

            <androidx.cardview.widget.CardView
            xmlns:card_view = "http://schemas.android.com/apk/res-auto"
            android:id="@+id/streaks_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_name"
            card_view:cardCornerRadius="8dp"
            card_view:cardElevation="20dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardBackgroundColor="#e9ecef"
            android:layout_centerHorizontal="true">
                <RelativeLayout
                    android:id="@+id/streaks_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/streaks_name"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="18sp"
                        android:text="Streak Point:"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/streak"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:textAlignment="center"
                        android:layout_toRightOf="@id/streaks_name"
                        android:text="0"
                        android:textSize="65dp"/>
                    <TextView
                        android:id="@+id/view_full_streak"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/streak"
                        android:text="View Streak History"
                        android:textAlignment="viewEnd"
                        android:textStyle="italic"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                xmlns:card_view = "http://schemas.android.com/apk/res-auto"
                android:id="@+id/task_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/streaks_card"
                card_view:cardCornerRadius="8dp"
                card_view:cardElevation="20dp"
                card_view:cardUseCompatPadding="true"
                card_view:cardBackgroundColor="#e9ecef">

                    <HorizontalScrollView
                        android:id="@+id/horizontal_scroll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/table_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TableLayout
                                android:id="@+id/task_table"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:stretchColumns="*">
                                <TableRow
                                    android:id="@+id/task_table_header"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:layout_marginBottom="10dp"
                                    >
                                    <TextView
                                        android:id="@+id/column_one"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Task"
                                        android:textAlignment="center"
                                        android:textStyle="bold"
                                        android:textSize="18sp"/>
                                    <TextView
                                        android:id="@+id/column_two"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Priority"
                                        android:textAlignment="center"
                                        android:textSize="18sp"
                                        android:textStyle="bold"/>
                                    <TextView
                                        android:id="@+id/column_three"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Due Date"
                                        android:textSize="18sp"
                                        android:textAlignment="center"
                                        android:textStyle="bold" />
                                </TableRow>
                            </TableLayout>

                        </RelativeLayout>
                    </HorizontalScrollView>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>



    </ScrollView>
    <RelativeLayout
        android:id="@+id/footer_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal|bottom">
        <Button
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Graph"
            android:textStyle="bold" />

        <Button
            android:id="@+id/friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/graph"
            android:text="Friends"
            android:textStyle="bold" />

        <Button
            android:id="@+id/add_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/friends"
            android:text="Task"
            android:textStyle="bold" />

        <Button
            android:id="@+id/project"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/add_class"
            android:text="Proj"
            android:textStyle="bold" />
    </RelativeLayout>
</LinearLayout>
