<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MarkCompleteTask">


    <TextView
        android:id="@+id/header_bar_complete_task"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete Task"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:id="@+id/complete_task_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="1dp"
        app:cardElevation="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_below="@id/header_bar_complete_task"
        app:cardBackgroundColor="#e9ecef">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/task_name_to_be_completed_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Task Name"
                android:textStyle="bold|italic"
               />
            <TextView
                android:id="@+id/task_name_to_be_completed"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_name_to_be_completed_header"/>

            <TextView
                android:id="@+id/task_status_to_be_completed_header"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/task_name_to_be_completed"
                android:textStyle="bold|italic"
                android:text="Task Status"/>

            <TextView
                android:id="@+id/task_status_to_be_completed"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@id/task_status_to_be_completed_header"/>

            <TextView
                android:id="@+id/task_deadline_to_be_completed_header"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold|italic"
                android:layout_below="@id/task_status_to_be_completed"
                android:text="Task Deadline"/>

            <TextView
                android:id="@+id/task_deadline_to_be_completed"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_deadline_to_be_completed_header"/>

            <TextView
                android:id="@+id/task_priority_to_be_completed_header"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textStyle="bold|italic"
                android:layout_below="@id/task_deadline_to_be_completed"
                android:text="Task Priority Level"/>
            <TextView
                android:id="@+id/task_priority_to_be_completed"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/task_priority_to_be_completed_header"/>

            <ImageView
                android:id="@+id/mark_task_completed"
                android:layout_width="43dp"
                android:layout_height="47dp"
                android:layout_below="@id/task_priority_to_be_completed"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/mark_completed" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:textAlignment="textEnd"
                android:layout_height="wrap_content"
                android:layout_below="@id/mark_task_completed"
                android:text="Check Complete"/>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/complete_task_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF03DAC5"
        android:orientation="horizontal">
        <Button
            android:id="@+id/exit_complete_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Back"/>
    </LinearLayout>

</RelativeLayout>