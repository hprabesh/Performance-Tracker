<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view_friend_streak">

    <TextView
        android:id="@+id/friend_streak_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Streak History"
        android:textSize="25dp"
        android:textAlignment="center"/>


    <androidx.cardview.widget.CardView
        android:id ="@+id/card_for_friend_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/friend_streak_history"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="#e9ecef"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/streak_point_overall_friends"
                android:layout_height="wrap_content"
                android:text="Current Streak Point"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:textSize="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/streak_point_overall_friends"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="High Priority Streak Point: "
                        android:textSize="15dp"

                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Medium Priority Streak Point: "
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Low Priority Streak Point: "
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Total Streak Point: "
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp">
                    <TextView
                        android:id="@+id/high_priority_streak_point_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/medium_priority_streak_point_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/low_priority_streak_point_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"/>
                    <TextView
                        android:id="@+id/total_priority_streak_point_friends"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginTop="15dp"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="15dp"
                    android:textSize="15dp">

                    <TextView
                        android:id="@+id/fire_streak_sign_1_friends"
                        android:layout_width="20dp"
                        android:layout_height="19dp"
                        android:background="@mipmap/streak"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/fire_streak_sign_2_friends"
                        android:layout_width="20dp"
                        android:layout_height="19dp"
                        android:background="@mipmap/streak"
                        android:textSize="15dp"

                        android:layout_marginTop="15dp"
                        />
                    <TextView
                        android:id="@+id/fire_streak_sign_3_friends"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@mipmap/streak"
                        android:textSize="15dp"
                        android:layout_marginTop="17dp"
                        />
                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="19dp"
                        android:background="@mipmap/streak"
                        android:textSize="15dp"
                        android:visibility="invisible"/>


                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>