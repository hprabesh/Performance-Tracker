<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/load_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Assignment"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>
    <LinearLayout
        android:id="@+id/linear_layout_task_name"
        android:layout_below="@id/load_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assignment Name:   "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/load_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_due_date"
        android:layout_below="@id/linear_layout_task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Due Date:   "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/load_task_due_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_priority_level"
        android:layout_below="@id/linear_layout_due_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Priority Level:   "
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/load_task_priority_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_layout_class_related"
        android:layout_below="@id/linear_layout_priority_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Class Related:   "
            android:textStyle="bold"
            android:id="@+id/load_task_class_related_bar"/>
        <TextView
            android:id="@+id/load_task_class_related"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/linear_layout_button"
        android:layout_below="@id/linear_layout_class_related"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/load_task_mark_completed"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Completed"/>

        <Button
            android:id="@+id/load_task_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Cancel" />

    </RelativeLayout>

</RelativeLayout>