<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <TextView
        android:id="@+id/load_all_task_date_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="This should begin with Today's Date"
        android:textAlignment="center"
        android:textStyle="bold|italic" />

    <ListView
        android:id="@+id/load_all_task_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/load_all_task_button_container"
        android:layout_below="@id/load_all_task_date_header"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:id="@+id/load_all_task_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/previous_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/roundedbutton"
            android:text="Previous Date" />

        <Button
            android:id="@+id/next_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/roundedbutton"
            android:text="Next Date" />
    </RelativeLayout>
</RelativeLayout>