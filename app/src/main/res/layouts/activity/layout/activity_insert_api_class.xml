<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/load_api_key_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Canvas API Key"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:textSize="25sp"/>
    <EditText
        android:id="@+id/api_key_edit_text"
        android:hint="Paste API Key from CANVAS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/load_api_key_activity"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp" />

    <RelativeLayout
        android:id="@+id/api_key_operation_buttons"
        android:layout_below="@id/api_key_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/api_key_insert_button"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insert API Key"/>
        <Button
            android:id="@+id/api_key_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Cancel" />
    </RelativeLayout>

</RelativeLayout>