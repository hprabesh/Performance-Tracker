<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white">

    <EditText
        android:id="@+id/canvas_class"
        android:hint=" Class Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        />
    <Button
        android:id="@+id/add_class"
        android:text="Add Class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/canvas_class"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/roundedbutton"/>

    <TextView
        android:id="@+id/class_list_text_view"
        android:text="View your Class List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_class"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        />
    <ListView
        android:id="@+id/classes_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/class_list_text_view"
        android:layout_above="@id/import_class_from_canvas"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        />
    <Button
        android:id="@+id/import_class_from_canvas"
        android:text="Import Class from Canvas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/roundedbutton"/>
</RelativeLayout>
